FROM python:3.11-slim

  RUN apt-get update && apt-get install -y \
      portaudio19-dev \
      gcc \
      python3-dev \
      && rm -rf /var/lib/apt/lists/*

  WORKDIR /app

  COPY requirements.txt .
  RUN pip install --no-cache-dir -r requirements.txt

  COPY . .

  EXPOSE 8001

  CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8001"]
